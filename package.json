{
  "name": "concord",
  "version": "1.0.0",
  "main": "client/main.js",
  "type": "module",
  "scripts": {
    "start:server": "nodemon server/main.js",
    "start:react": "vite",
    "start:electron": "wait-on http://localhost:5173 && electron client/main.js",
    "dev": "concurrently \"npm:start:server\" \"npm:start:react\" \"npm:start:electron\"",

    "build:react": "vite build",
    "dist:mac": "npm run build:react && electron-builder --mac",
    "dist:win": "npm run build:react && electron-builder --win",
    "dist:linux": "npm run build:react && electron-builder --linux",
    "dist:all": "npm run build:react && electron-builder --mac --win --linux" 
  },
  "repository": {
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
  },
  "devDependencies": {
  },

  "build": {
    "appId": "com.seuamigo.concord",
    "productName": "Concord",
    
    "files": [
    "client/**/*"
    ],
    
    "directories": {
      "buildResources": "build_assets"
    },

    "mac": {
      "target": [
        {
          "target": "dmg", 
          "arch": ["x64", "arm64"] 
        }
      ],
      "category": "public.app-category.social-networking",
      "icon": "build_assets/icon.icns" 
    },

    "win": {
      "target": [
        {
          "target": "nsis", 
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build_assets/icon.ico" 
    },

    "linux": {
      "target": [
        {
          "target": "AppImage", 
          "arch": ["x64", "arm64"] 
        },
        {
          "target": "deb", 
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "Network;Chat",
      "icon": "build_assets/icon.png" 
    }
  }
}